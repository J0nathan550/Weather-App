<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weather_App.Pages.AstronomicPage"
             Title="Астрономічна інформація">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListView x:Name="mainView" Refreshing="ListView_Refreshing" ZIndex="1" SeparatorColor="Transparent" Grid.Row="0" Grid.RowSpan="2" VerticalOptions="Start" BackgroundColor="Transparent" IsPullToRefreshEnabled="True" HeightRequest="130"/>
        <ScrollView Grid.Row="1">
            <VerticalStackLayout x:Name="mainLayout" Spacing="15" Margin="15">
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>